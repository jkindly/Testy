{% extends 'base.html.twig' %}

{% block title %}Nowy test{% endblock %}

{% block body %}

    <section class="create-new-test">
        <h1><i class="far fa-file-alt"></i> Utwórz nowy test</h1>
        {{ form_start(form) }}
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {placeholder: 'Wprowadź nazwę'} }) }}
            <div class="new-test-error">
                {% for error in form.name.vars.errors %}
                    <span>{{ error.message }}</span>
                {% endfor %}
            </div>
            <button type="submit" class="new-test-btn">Utwórz</button>
        {{ form_end(form) }}
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/new_test.js') }}"></script>
{% endblock %}
